<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.pinguinocontrol"
    android:installLocation="auto"
    android:versionCode="3"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCES_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="io.pinguinocontrol.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.pinguinocontrol.Connect"
            android:label="@string/inter" >
        </activity>
        <activity
            android:name="io.pinguinocontrol.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="io.pinguinocontrol.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="io.pinguinocontrol.Contact"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_contact"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="io.pinguinocontrol.Instructions"
            android:label="@string/title_activity_instructions" >
        </activity>
        <activity
            android:name="io.pinguinocontrol.ConnectionSelect"
            android:label="@string/title_activity_connection_select" >
        </activity>
        <activity
            android:name="io.pinguinocontrol.AvailablePinguinos"
            android:label="@string/title_activity_available_pinguinos" >
        </activity>
        <activity
            android:name="io.pinguinocontrol.WiFiConnected"
            android:label="@string/title_activity_wi_fi_connected" >
        </activity>
    </application>

</manifest>
